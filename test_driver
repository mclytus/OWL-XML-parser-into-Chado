// Load the XML file.
$owl = new XMLReader();

// Open the OWL file for parsing.
$owl->open('ro.owl');
while ($owl->read())
{
	if ($owl->nodeType == XMLReader::ELEMENT)
	{
		// Build the section array.
		$section = array();
		$section['name'] = $owl->name;
		
		print $section['name']= 'owl:Ontology';
		
		// First, get the attributes.
		getSectionAttributes ($owl, $section);
		
		
	}
}
	


function getSectionAttributes($owl, &$section)
{
	while ($owl->read())
	{
		if ($owl->nodeType == XMLReader::ELEMENT)
		{
		}
		if ($owl->name == $section['name'] && $owl->nodeType == XMLReader::END_ELEMENT)
		{
			print $section['attribute']= 'http://purl.obolibrary.org/obo.ro.owl'; 
		}
	}
}
				 
